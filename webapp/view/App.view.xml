<mvc:View
    controllerName="my.app.namespace.controller.App"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">

    
        <m:Button
            text="{i18n>showHelloButtonText}"
            press="onShowHello"/>
        
        <m:Input
            value="{/recipient/name}"
            valueLiveUpdate="true"
            width="60%"/>

        
        <m:Text text="{/greeting}" />
    

</mvc:View>
