<mvc:View
    controllerName="my.app.namespace.controller.App"
    xmlns:m="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true">

    <m:VBox>
        <m:Button
            text="Say HI"
            press="onShowHello"/>
        
        <m:Input
            value="{/recipient/name}"
            valueLiveUpdate="true"
            width="60%"/>

        
        <m:Text text="{/greeting}" />
    </m:VBox>

</mvc:View>
